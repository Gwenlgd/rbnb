<!DOCTYPE html>
<html>
  <head>
    <title>DressUs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= favicon_link_tag asset_path('du.png') %>
  </head>

  <body>
    <div class="page-container">
      <div class="navbar-container"><% if action_name == 'home' %>
         <%= render "shared/navbar_homepage" %>
         <% else %>
         <%= render "shared/navbar" %>
          <% end %>
            <div class="searchbar-container"><% unless action_name == 'home' %>
              <%= render "shared/searchbar" %>
              <% end %>
            </div>

        <div class="content-container"><%= yield %></div>
          <div class="footer-container"><% unless action_name == 'home' %>
            <%= render "shared/footer" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
