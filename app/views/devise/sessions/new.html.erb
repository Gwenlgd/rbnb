<div class="container">
  <div class="wrapper" >
    <div class="partyimage">
      <%= image_tag "login3.jpg", class: "sizingimage" %>
    </div>
  <div class="signupform">
<div class="signuptitle">

  <h2>Sign in</h2>
  <p>- to check out deals, offers, discounts and bonus vouchers.</p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label: false,
                placeholder: "Email *",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: false,
                placeholder: "Password *",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
    <div class="form-actions">
        <%= f.button :submit, "Sign in", class: "btn-white py-2" %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Become a member", new_registration_path(resource_name), class: "btn btn-signup-forgotpassword py-2" %><br />
        <% end %>
      </div>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot password?", new_password_path(resource_name), class: "btn btn-forgotpassword py-2"  %><br />
  <% end %>

  </div>
</div>
