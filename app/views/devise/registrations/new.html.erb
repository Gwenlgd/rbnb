<div class="container">
<div class="wrapper">
<div class="partyimage">
<%= image_tag "partyimage.jpg", class: "sizingimage" %>

</div>
<div class="signupform">
  <div class="signuptitle">
  <h2 class="mt-4">Sign up to checkout</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  placeholder: "Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "input-form" }%>
      <%= f.input :password,
                  label: false,
                  placeholder: "Password",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "input-form" } %>
      <%= f.input :password_confirmation,
                  label: false,
                  placeholder: "Password Confirmation",
                  required: true,
                  input_html: { autocomplete: "new-password", class: "input-form mb-4" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn-white" %>
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-signup-forgotpassword" %>
    </div>
  <% end %>
</div>
 </div>
</div>
