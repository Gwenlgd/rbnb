 <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-bs-interval="60000">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <h1>Rental Period</h1>
                      <%= render 'form', rental: @rental %>
                  </div>
                  <div class="carousel-item">
                    <div class="order-summary">
                      <div class="card-summary">
                        <div class="order-sum-title"><h2>ORDER SUMMARY</h2></div>

                        <%# DELIVERY %>
                          <div class="order-delivery">
                            <div class="order-parag"><p>Delivery time (Express)</p></div>
                            <div class="order-chosen"><p>Next Working day</p></div>
                          </div>

                          <div class="order-rental-period">
                            <div class="order-parag"><p>Rental period</p></div>
                            <%# Find a way to calculate the number of days %>
                            <div class="order-chosen">
                            <p><%= (@rental.start_date..@rental.end_date).count %> days</p>
                            </div>
                          </div>
                          <div class="line"></div>
                          <%# PRICE %>
                          <div class="order-rental-price">
                            <div class="order-parag"><p>Rental price</p></div>
                            <div class="order-chosen"><p>€ <%= @listing.price %></p></div>
                          </div>

                          <div class="order-insurance-price">
                            <div class="order-parag"><p>Insurance</p></div>
                            <div class="order-chosen"><p>€ 8 / day </p></div>
                          </div>

                          <div class="order-delivery-price">
                            <div class="order-parag"><p>Delivery cost</p></div>
                            <div class="order-chosen"><p>€ 6</p></div>
                          </div>
                          <div class="line"></div>
                          <%# TOTAL %>
                          <div class="order-total-price">
                            <div class="order-parag"><p>TOTAL</p></div>
                            <div class="order-chosen"><p>€ 188</p></div>
                          </div>

                          <div class="order-button">
                            <%= link_to "Confirm bag", listing_rentals_path(@listing)%>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
