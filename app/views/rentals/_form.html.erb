<%# No DIV page-container, make the page looks weird %>

  <div class="booking-form" >
      <%= simple_form_for [@listing, @rental] do |f| %>
      <div class="form-inputs-date">
        <h2><%= f.input :start_date, as: :date, html5: true, label: "Check-in", required: false %></h2>
      </div>
      <div class="form-inputs-date">
        <h2><%= f.input :end_date, as: :date, html5: true, label: "Checkout", required: false  %></h2>
      </div>
      <div class="form-inputs-date">
        <%= f.label :delivery, "Delivery"%>
        <%= f.input :delivery, as: :check_boxes, collection: [ "Express Delivery (2 days) : €15", "Standard Delivery (5 days) : €6"], legend_tag: false%>
      </div>
      <div class="form-inputs-date">
        <%= f.label :insurance, "Insurance"%>
        <%= f.input :insurance, as: :check_boxes, collection: [ "Yes, I would like to insure my rental", "No, thank you"], legend_tag: false%>
      </div>
      <div class="form-actions-date">
        <%= f.button :submit, class:"btn-date" %>
      </div>
      <% end %>
  </div>
